<div class="panel panel-default" id="comments" style="height: 300px; overflow-y: scroll;">
    <div class="panel-body">
        <ul class="media-list user_posts">
            <% @latest_comments.each do |comment| %>
              <li class="media" id="user_post">
                  <span class="pull-left"><%= image_tag("#{comment.dialect}.ico", class: 'media-object post_dialect', width: '48px') %></span>
                        <div class="media-body">
                            <h4 class="media-heading post_username">
                                <%= comment.username %>
                                <small class="text-muted post_created_at"><%= comment.created_at %></small>
                            </h4>
                            <p class="post_message"><%= comment.message %></p>
                        </div>
              </li>
            <% end %>
            <li class="media" style="display: none" id="user_post">
                <span class="pull-left"><%= image_tag('', class: 'media-object post_dialect', width: '48px') %></span>
                <div class="media-body">
                    <h4 class="media-heading post_username">
                    </h4>
                    <p class="post_message"></p>
                </div>
            </li>
        </ul>
    </div>
</div>
<div class="well commentbox">
  <div id="comment_error" class="alert alert-danger" role="alert" style="display: none">
      <span class="sr-only">Error:</span>
  </div>
  <label id="comment_label">Enter your comment</label>
  <textarea id="user_comment" class="form-control custom-control" rows="3" style="resize:none"></textarea>
  <input type="button" id="post_comment" value="Post" class="btn btn-default">
</div>
