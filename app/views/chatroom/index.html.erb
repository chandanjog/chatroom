<div class="panel panel-default" id="comments" style="height: 300px; overflow-y: scroll;">
    <div class="panel-body">
        <ul class="media-list user_posts">
            <% @latest_comments.each do |comment| %>
              <%= render partial: 'comment', locals: {comment: comment}%>
            <% end %>
        </ul>
    </div>
</div>
<div class="input-group commentbox">
    <textarea id="user_comment" class="form-control custom-control" rows="3" style="resize:none"></textarea>
    <span class="input-group-addon btn btn-primary" id="post_comment">Post</span>
</div>
<div id="comment_error" class="alert alert-danger" role="alert" style="display: none">
    <span class="sr-only">Error:</span>
</div>

